{
    "$schema": "../../schemas/component.schema.json",
    "title": "Kendo Editor Dialog HTML Spec",
    "component": "editor-dialog",
    "selector": [
        ".k-editor-dialog"
    ],
    "$ref": "dialog",
    "children": [
        {
            "name": "editor-textarea",
            "$ref": "textarea",
            "selector": [
                ".k-editor-textarea"
            ]
        },
        {
            "name": "editor-form",
            "$ref": "form",
            "selector": [
                ".k-form"
            ],
            "options": [
                {
                    "name": "orientation",
                    "value": "horizontal"
                }
            ]
        }
    ]
}
