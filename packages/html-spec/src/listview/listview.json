{
    "$schema": "../../schemas/component.schema.json",
    "title": "Kendo Listview HTML Spec",
    "component": "listview",
    "selector": [
        ".k-listview"
    ],
    "states": [
        {
            "name": "disabled",
            "selector": [
                ".k-disabled"
            ]
        }
    ],
    "options": [
        {
            "name": "layout",
            "values": [
                {
                    "name": "flex",
                    "selector": [
                        ".k-d-flex"
                    ]
                },
                {
                    "name": "grid",
                    "selector": [
                        ".k-d-grid"
                    ]
                }
            ]
        },
        {
            "name": "flex-direction",
            "values": [
                {
                    "name": "row",
                    "selector": [
                        ".k-d-flex-row"
                    ]
                },
                {
                    "name": "row-inverse",
                    "selector": [
                        ".k-d-flex-row-inverse"
                    ]
                },
                {
                    "name": "column",
                    "selector": [
                        ".k-d-flex-column"
                    ]
                },
                {
                    "name": "column-inverse",
                    "selector": [
                        ".k-d-flex-column-inverse"
                    ]
                }

            ]
        },
        {
            "name": "borders",
            "values": [
                {
                    "name": "all",
                    "selector": [
                        ".k-listview-borders-all"
                    ]
                },
                {
                    "name": "horizontal",
                    "selector": [
                        ".k-listview-borders-horizontal"
                    ]
                },
                {
                    "name": "vertical",
                    "selector": [
                        ".k-listview-borders-vertical"
                    ]
                }
            ]
        }
    ],
    "children": [
        {
            "name": "listview-header",
            "selector": [
                ".k-listview-header"
            ]
        },
        {
            "name": "listview-content",
            "selector": [
                ".k-listview-content"
            ],
            "children": [
                {
                    "name": "listview-item",
                    "selector": [
                        ".k-listview-item"
                    ],
                    "states": [
                        {
                            "name": "focus",
                            "selector": [
                                ":focus",
                                ".k-focus"
                            ]
                        },
                        {
                            "name":"selected",
                            "selector": [
                                ".k-selected"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "listview-footer",
            "selector": [
                ".k-listview-footer"
            ]
        },
        {
            "name": "listview-pager",
            "$ref": "pager",
            "selector": [
                ".k-listview-pager"
            ],
            "options": [
                {
                    "name": "position",
                    "values": [
                        {
                            "name": "top",
                            "selector": [
                                ".k-listview-pager-top"
                            ]
                        },
                        {
                            "name": "bottom",
                            "selector": [
                                ".k-listview-pager-bottom"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
